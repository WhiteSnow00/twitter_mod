<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="QRProfileButton">
        <item name="android:padding">@dimen/space_8</item>
        <item name="android:visibility">gone</item>
        <item name="android:src">@drawable/ic_vector_qr_code_scanner</item>
        <item name="android:tint">@color/white</item>
    </style>
    <style name="QRProfileCardView">
        <item name="android:background">@drawable/qr_user_card_background</item>
        <item name="android:padding">@dimen/space_4</item>
        <item name="bylineSize">@dimen/font_size_small</item>
        <item name="contentSize">@dimen/font_size_normal</item>
        <item name="profileDescriptionFontSize">@dimen/font_size_small</item>
        <item name="profileImageTopMarginRatio">2.1</item>
        <item name="profileUserImageStrokeWidth">@dimen/profile_header_avatar_border</item>
    </style>
    <style name="QRReaderButton">
        <item name="android:padding">@dimen/space_8</item>
        <item name="android:visibility">gone</item>
        <item name="android:src">@drawable/ic_vector_qr_code</item>
        <item name="android:tint">@color/white</item>
    </style>
    <style name="QRShowFullProfileText">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">?attr/abstractColorLink</item>
        <item name="android:gravity">left|center_horizontal</item>
        <item name="android:background">@drawable/qr_user_card_ripple_selector_rectangle</item>
        <item name="android:paddingTop">@dimen/space_4</item>
        <item name="android:paddingBottom">@dimen/space_4</item>
        <item name="android:text">@string/qr_full_profile</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/space_16</item>
        <item name="android:paddingEnd">@dimen/space_16</item>
    </style>
    <style name="Widget.Design.TabLayout" parent="@style/Base.Widget.Design.TabLayout">
        <item name="tabGravity">1</item>
        <item name="tabMode">1</item>
    </style>
    <style name="Widget.MaterialComponents.MaterialCalendar.HeaderSelection" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">@integer/mtrl_calendar_selection_text_lines</item>
    </style>
    <style name="Widget.MaterialComponents.MaterialCalendar.HeaderToggleButton" parent="@style/Base.Widget.MaterialComponents.MaterialCalendar.HeaderToggleButton">
        <item name="android:layout_gravity">top|right|center_vertical|center_horizontal|center</item>
    </style>
</resources>
